{
    "appenders": {
        "out": {
            "type": "console"
        },
        "logfile": {
            "type": "file",
            "filename": "logfile.log"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "out"
            ],
            "level": "error"
        },
        "app": {
            "appenders": [
                "logfile",
                "out"
            ],
            "level": "debug"
        },
        "controller": {
            "appenders": [
                "out"
            ],
            "level": "debug"
        },
        "server": {
            "appenders": [
                "out"
            ],
            "level": "debug"
        }
    }
}
